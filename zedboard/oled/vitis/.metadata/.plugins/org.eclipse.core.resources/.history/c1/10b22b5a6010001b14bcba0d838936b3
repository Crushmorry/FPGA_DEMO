#include <stdio.h>
//#include "platform.h"
#include "xil_types.h"
#include "xparameters.h"
//#include "xgpiops.h"
//#include "xil_io.h"
#include "oled.h"

int main(void)
{

     print("##### Application Starts #####\n\r");
     OLED_Init();
while(){
     OLED_ShowString(,, "Hello LengWaWa");
     OLED_Refresh_Gram();
     sleep();
     OLED_Clear();//清屏，否则如果后续显示的长度比较短的话，就不会完全更新为新的数据，有拖尾
     OLED_ShowNum(,,,,);
     OLED_Refresh_Gram();
     sleep();
　　}

     return ;
}
